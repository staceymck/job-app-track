<nav>
  <a class="button loud" href="/job_apps/new">Add App</a>
  <a class="button soft" href="/logout">Logout</a>
</nav>

<h1>JOB APP TRACK dashboard</h1>

<h2><%= @current_user.username %></h2>
<%= styled_flash %>

<div class="grid-container">
  <div class="dashboard-col">
    <h3>Interested</h3>
      <% @apps.interested.each do |app| %>
        <a href="/job_apps/<%= app.id %>">
        <div class="card <%="alert" if app.follow_ups.incomplete.size > 0%>">
          <p><%= app.job_title %> - <%= app.company_name %></p>

          <% app.follow_ups.incomplete.each do |follow_up| %>
            <p><span class="text-alert">Follow-up needed:  
            <%= follow_up.complete_by.strftime('%m/%d/%Y') %></span></p>
          <% end %>
        </div></a>
      <% end %>
  </div>

  <div class="dashboard-col">
    <h3>Applied</h3>
      <% @apps.applied.each do |app| %>
        <div class="card <%="alert" if app.follow_ups.incomplete.size > 0%>">
          <a href="/job_apps/<%= app.id %>">
          <p><%= app.job_title %> - <%= app.company_name %></p>

          <% app.follow_ups.incomplete.each do |follow_up| %>
            <p><span class="text-alert">Follow-up needed: 
            <%= follow_up.complete_by.strftime('%m/%d/%Y') %></span></p>
          <% end %></a>
        </div>
      <% end %>
  </div>

  <div class="dashboard-col">
    <h3>Interview</h3>
    <% @apps.interview.each do |app| %>
      <div class="card <%="alert" if app.follow_ups.incomplete.size > 0%>">
        <a href="/job_apps/<%= app.id %>">
        <p><%= app.job_title %> - <%= app.company_name %></p>

        <% app.follow_ups.incomplete.each do |follow_up| %>
          <p><span class="text-alert">Follow-up needed: 
          <%= follow_up.complete_by.strftime('%m/%d/%Y') %></span></p>
        <% end %></a>
      </div>
    <% end %>
  </div>

  <div class="dashboard-col">
    <h3>Offer</h3>
    <% @apps.offer.each do |app| %>
      <div class="card <%="alert" if app.follow_ups.incomplete.size > 0%>">
        <a href="/job_apps/<%= app.id %>">
        <p><%= app.job_title %> - <%= app.company_name %></p>

        <% app.follow_ups.incomplete.each do |follow_up| %>
          <p><span class="text-alert">Follow-up needed: 
          <%= follow_up.complete_by.strftime('%m/%d/%Y') %></span></p>
        <% end %>

        <% if app.offer_decision != "na" %>
          <p><span class="emphasis"><%= app.offer_decision.capitalize %></span></p>
        <% end %></a>
      </div>
    <% end %>
  </div>
</div>

<p><a href="/job_apps/inactive">View inactive + no offer apps</a></p>
<p><a href="/users/<%=@current_user.id%>/delete">Delete account</a></p>